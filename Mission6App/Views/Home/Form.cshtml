@{
    ViewData["Title"] = "Movies Form";
}
@model Application

<!DOCTYPE html>

<html lang="en">
<head>
    <title>Movies Form</title>
</head>
<body>
<h1>Movie Form</h1>

<h2>Add a New Movie</h2>

<form method="post">
    <div>
        <label asp-for="Category">Category</label>
        <input type="text" name="Category" required />
    </div>
    <div>
        <label asp-for="Title">Title</label>
        <input type="text" name="Title" required/>
    </div>


    <div>
        <label asp-for="Director">Director</label>
        <input type="text" name="Director" required/>
    </div>

    <div>
        <label asp-for="Year">Year</label>
        <input type="number" name="Year" min="1888" max="2100" required/>
    </div>

    <div>
        <label asp-for="Rating">Rating</label>
        <select name="Rating" required>
            <option value="">Select Rating</option>
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select>
    </div>

    <div>
        <label asp-for="Edited">Edited</label>
        <select name="Edited">
            <option value="">Select</option>
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
    </div>

    <div>
        <label asp-for="LentTo">Lent To</label>
        <input type="text" name="LentTo"/>
    </div>

    <div>
        <label asp-for="Notes">Notes</label>
        <input type="text" name="Notes" maxlength="25"/>
    </div>

    <button type="submit">Add Movie</button>
</form>
<div>

</div>
</body>
</html>